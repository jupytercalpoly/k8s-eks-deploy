apiVersion: v1
clusters:
- cluster:
    server: {{ endpoint_url }}
    certificate-authority-data: {{ ca_cert }}
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: aws
  name: aws
current-context: aws
kind: Config
preferences: {}
users:
- name: aws
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1alpha1
      command: aws-iam-authenticator
      args:
        - "token"
        - "-i"
        - "{{ cluster_name }}"
